<!doctype html>
<html hreflang="{{locale}}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{% endblock %} | {{__('SITE_TITLE')}}</title>
    <link href="https://fonts.googleapis.com/css?family=Playfair+Display" rel="stylesheet">
    <link rel="stylesheet" href="/main.css">
    
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#786eff">
    <meta name="apple-mobile-web-app-title" content="{{__('SITE_TITLE')}}">
    <meta name="application-name" content="{{__('SITE_TITLE')}}">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">
</head>
<body>
    <div class="navbar-fixed">
        <nav>
            <div class="nav-wrapper">
                <a href="/{{locale}}/" class="brand-logo"><img src="{{mklink('abs', 'img/logo.' + locale + '.svg')}}" alt="{{__('NAVBAR_TITLE')}}"></a>
                <ul class="right">
                    {% if locale != 'zh' %}
                        <li><a href="/zh{{url}}">{{__('NAVBAR_CHINESE')}}</a></li>
                    {% endif %}
                    {% if locale != 'en' %}
                        <li><a href="/en{{url}}">{{__('NAVBAR_ENGLISH')}}</a></li>
                    {% endif %}
                </ul>
                <ul class="right hide-on-med-and-down">
                    <li><a href="/{{locale}}/deputies">{{__('NAVBAR_DEPUTIES')}}</a></li>
                    <li><a href="/{{locale}}/bills">{{__('NAVBAR_BILLS')}}</a></li>
                    <li><a href="/{{locale}}/documents">{{__('NAVBAR_DOCS')}}</a></li>
                </ul>
            </div>
        </nav>
    </div>
    
    {% block body %}{% endblock %}
    <script src="/bundle.js"></script>

    <footer class="page-footer">
        <div class="footer-copyright">
            <div class="container">
                <span>{{__('FOOTER_COPYRIGHT')}}</span>
                <a class="right" target="_blank" href="https://fb.com/ERROR451Macau/"><svg xmlns="http://www.w3.org/2000/svg" viewBox="38.79 0 77.57 155.14" class="facebook-svg"><path fill="#9b9b9b" d="M89.58 155.14V84.38h23.75l3.56-27.59h-27.3V39.2c0-7.99 2.2-13.43 13.66-13.43h14.6V1.07A197.9 197.9 0 0 0 96.58 0C75.52 0 61.1 12.85 61.1 36.45V56.8H37.3v27.59H61.1v70.76h28.48z"/></svg></a>
                <a class="right hide-on-med-and-down" href="/{{locale}}/documents">{{__('NAVBAR_DOCS')}}</a>
                <a class="right hide-on-med-and-down" href="/{{locale}}/bills">{{__('NAVBAR_BILLS')}}</a>
                <a class="right hide-on-med-and-down" href="/{{locale}}/deputies">{{__('NAVBAR_DEPUTIES')}}</a>
            </div>
        </div>
    </footer>
</body>
</html>
