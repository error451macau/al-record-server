{% extends "parent.njk" %}

{% block title %}{{__('DEPUTIES_PAGE_TITLE')}}{% endblock %}

{% block body %}
    <div class="deputies-body container">
        <div class="row">
            <h1 class="col s12 center-align">{{__('DEPUTIES_PAGE_TITLE')}}</h1>
        </div>
        {# <ul class="row tabs">
            <li class="tab col s4"><a href="#test1">Test 1</a></li>
            <li class="tab col s4"><a class="active" href="#test2">Test 2</a></li>
            <li class="tab col s4"><a href="#test4">Test 4</a></li>
        </ul> #}
        {% for method, deputies in deputies | groupby('electedMethod') %}
            <div class="row">
                <div class="col s12">
                    <h4>{{__('DEPUTY_METHOD_' + method)}}</h4>
                </div>
                <ul class="col row deputies-group"> {# no .col #}
                    {% for deputy in deputies %}
                        <li class="col s12 m6 l3">
                            <a href="{{mklink('deputy', deputy)}}">
                                <div class="deputy-card deputy-card--{{deputy.electedMethod}}">
                                    <img src="{{mklink('abs', 'img/deputies/' + deputy.id + '.jpg')}}">
                                    {{-''-}}
                                    <div class="deputy-card__name">
                                        {{deputy.name[locale]}}
                                    </div>
                                </div>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        {% endfor %}
    </div>
{% endblock %}
