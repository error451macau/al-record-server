{% extends "parent.njk" %}

{% block title %}{{__('BILLS_PAGE_TITLE')}}{% endblock %}

{% block body %}
    <div class="bills container">
        <div class="clear-margin">
            <h2 class="center-align">{{__('BILLS_PAGE_TITLE')}}</h2>
        </div>
        <table class="highlight">
            <thead>
                <tr>
                    <th>{{__('BILL_TITLE')}}</th>
                    <th>{{__('BILL_PROPOSER')}}</th>
                    <th>{{__('BILL_VOTING_DATE')}}</th>
                    <th>{{__('BILL_RESULT')}}</th>
                </tr>
            </thead>
            <tbody class="collection">
                {% for bill in bills %}
                    <tr class="collection-item">
                        <td><a href="{{mklink('bill', bill)}}">{{bill.title[locale]}}</a></td>
                        <td>
                            {% set proposerDeputy = deputiesDict[bill.proposerDeputyId] %}
                            <a href="{{mklink('deputy', proposerDeputy)}}">
                                {{proposerDeputy.name[locale]}}
                            </a>
                        </td>
                        <td>{{bill.date | dateFormat}}</td>
                        <td class="result-{{bill.result | lower}}">{{__('BILL_RESULT_' + bill.result)}}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
