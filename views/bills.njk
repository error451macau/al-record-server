{% extends "parent.njk" %}

{% block title %}{{__('BILLS_PAGE_TITLE')}}{% endblock %}

{% block body %}
    <div class="bills container">
        <h1 class="center-align">{{__('BILLS_PAGE_TITLE')}}</h1>
        <table class="highlight striped bordered">
            <thead>
                <tr>
                    <th>{{__('BILL_TITLE')}}</th>
                    <th>{{__('BILL_PROPOSER')}}</th>
                    <th class="col-voting-date">{{__('BILL_VOTING_DATE')}}</th>
                    <th class="col-result">{{__('BILL_RESULT')}}</th>
                </tr>
            </thead>
            <tbody>
                {% for bill in bills %}
                    <tr>
                        <td><a href="{{mklink('bill', bill)}}">{{bill.title[locale]}}</a></td>
                        <td class="col-proposer">
                            {% set proposerDeputy = deputiesDict[bill.proposerDeputyId] %}
                            <a href="{{mklink('deputy', proposerDeputy)}}">
                                <img src="{{mklink('abs', 'img/deputies/' + proposerDeputy.id + '.jpg')}}"><span>{{proposerDeputy.name[locale]}}</span>
                            </a>
                        </td>
                        <td>{{bill.date | dateFormat}}</td>
                        <td class="result-{{bill.result | lower}}">{{__('BILL_RESULT_' + bill.result)}}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
